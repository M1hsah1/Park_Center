<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Park</h1>
        <div class="col-6 offset-3">
            <form action="/parks/<%=park._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class = "form-control" type="text" name="park[title]" id="title" value="<%= park.title%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class = "form-control" type="text" name="park[location]" id="location" value="<%= park.location%>" required>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Add more Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="Username" aria-describedby="basic-addon1" name="park[price]" value="<%= park.price%>" required>
                  </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class = "form-control" type="text" name="park[description]" id="description" required><%= park.description %> </textarea>
                </div>
                <div class="mb-3">
                    <% park.images.forEach(function(img,i){ %>
                        <img src="<%= img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            <label for="image-<%=i%>">Delete</label>
                        </div>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Edit</button>
                </div>
                
            </form>
        </div>
    </div>


    
