<% layout('layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1>All Parks</h1>    
        <% for(let park of parks) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(park.images.length > 0) {%>
                        <img class="img-fluid" alt="" src = "<%= park.images[0].url%>">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= park.title %></h5>
                            <p class="card-text"> <%= park.description %>
                                <small class="card-text text-muted"><%= park.location %></small>
                            </p>
                            <a class= "btn btn-primary" href="/parks/<%= park._id %>">View</a>
                        </div>
                    </div>
                </div>
            </div>

            <%}%>



<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const parks = {features:<%- JSON.stringify(parks) %>};
</script>
<script src="/js/clusterMap.js"></script>